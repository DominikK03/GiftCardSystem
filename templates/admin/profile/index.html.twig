{% extends 'admin/layout.html.twig' %}

{% block title %}{{ 'profile.title'|trans({}, 'ui') }}{% endblock %}
{% block page_title %}{{ 'profile.title'|trans({}, 'ui') }}{% endblock %}

{% block content %}
<div class="row g-4">

    {# Personal data #}
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-person-fill me-2"></i>{{ 'profile.personal_heading'|trans({}, 'ui') }}
            </div>
            <div class="card-body">
                <form method="POST" action="{{ path('admin_profile_personal') }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('profile_personal') }}">

                    <div class="mb-3">
                        <label class="form-label">{{ 'profile.email_label'|trans({}, 'ui') }}</label>
                        <input type="text" class="form-control" value="{{ user.email }}" disabled readonly>
                        <div class="form-text">{{ 'profile.email_readonly'|trans({}, 'ui') }}</div>
                    </div>

                    <div class="mb-3">
                        <label for="first_name" class="form-label">{{ 'profile.first_name_label'|trans({}, 'ui') }}</label>
                        <input type="text" id="first_name" name="first_name" class="form-control"
                               value="{{ user.profile.firstName|default('') }}" maxlength="100">
                    </div>

                    <div class="mb-3">
                        <label for="last_name" class="form-label">{{ 'profile.last_name_label'|trans({}, 'ui') }}</label>
                        <input type="text" id="last_name" name="last_name" class="form-control"
                               value="{{ user.profile.lastName|default('') }}" maxlength="100">
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>{{ 'profile.save_personal'|trans({}, 'ui') }}
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    {# Password change #}
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-lock-fill me-2"></i>{{ 'profile.password_heading'|trans({}, 'ui') }}
            </div>
            <div class="card-body">
                <form method="POST" action="{{ path('admin_profile_password') }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('profile_password') }}">

                    <div class="mb-3">
                        <label for="current_password" class="form-label">{{ 'profile.current_password_label'|trans({}, 'ui') }}</label>
                        <input type="password" id="current_password" name="current_password" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="new_password" class="form-label">{{ 'profile.new_password_label'|trans({}, 'ui') }}</label>
                        <input type="password" id="new_password" name="new_password" class="form-control"
                               minlength="8" required>
                        <div class="form-text">{{ 'profile.password_hint'|trans({}, 'ui') }}</div>
                    </div>

                    <div class="mb-3">
                        <label for="new_password_confirm" class="form-label">{{ 'profile.new_password_confirm_label'|trans({}, 'ui') }}</label>
                        <input type="password" id="new_password_confirm" name="new_password_confirm" class="form-control"
                               minlength="8" required>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-key-fill me-1"></i>{{ 'profile.change_password_submit'|trans({}, 'ui') }}
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
{% endblock %}
