{% extends 'admin/layout.html.twig' %}

{% block title %}{{ 'wizard.step1_title'|trans({}, 'ui') }}{% endblock %}
{% block page_title %}{{ 'wizard.new_tenant'|trans({}, 'ui') }}{% endblock %}

{% block content %}
    {% include 'admin/wizard/_progress.html.twig' with {currentStep: 1} %}

    <div class="row justify-content-center">
        <div class="col-lg-6">
            {% if errors is defined and errors|length > 0 %}
                <div class="alert alert-danger d-flex align-items-start mb-3">
                    <i class="bi bi-exclamation-triangle-fill me-2 mt-1"></i>
                    <div>
                        {% for error in errors %}
                            <div>{{ error }}</div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            <div class="card">
                <div class="card-header">
                    <i class="bi bi-building me-2"></i>{{ 'wizard.basic_info'|trans({}, 'ui') }}
                </div>
                <div class="card-body">
                    <form method="POST" action="{{ path('admin_tenant_wizard_step1') }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('tenant_wizard') }}">

                        <div class="mb-3">
                            <label class="form-label">{{ 'wizard.company_name'|trans({}, 'ui') }}</label>
                            <input type="text" name="name" value="{{ data.name|default('') }}"
                                   class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">{{ 'wizard.email'|trans({}, 'ui') }}</label>
                            <input type="email" name="email" value="{{ data.email|default('') }}"
                                   class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">{{ 'wizard.tax_id'|trans({}, 'ui') }}</label>
                            <input type="text" name="nip" value="{{ data.nip|default('') }}"
                                   class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">{{ 'wizard.phone'|trans({}, 'ui') }}</label>
                            <input type="text" name="phoneNumber" value="{{ data.phoneNumber|default('') }}"
                                   class="form-control" required>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">
                                {{ 'wizard.next'|trans({}, 'ui') }} <i class="bi bi-arrow-right ms-1"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
