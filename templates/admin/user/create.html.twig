{% extends 'admin/layout.html.twig' %}

{% block title %}{{ 'user.create_title'|trans({}, 'ui') }}{% endblock %}
{% block page_title %}{{ 'user.create_title'|trans({}, 'ui') }}{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-lg-6">
        {% if errors is defined and errors|length > 0 %}
            <div class="alert alert-danger d-flex align-items-start mb-3">
                <i class="bi bi-exclamation-triangle-fill me-2 mt-1"></i>
                <div>
                    {% for error in errors %}
                        <div>{{ error }}</div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        <div class="card">
            <div class="card-header">
                <i class="bi bi-person-plus me-2"></i>{{ 'user.create_title'|trans({}, 'ui') }}
            </div>
            <div class="card-body">
                <form method="POST" action="{{ path('admin_user_create') }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('user_create') }}">

                    <div class="mb-3">
                        <label for="email" class="form-label">{{ 'user.email_label'|trans({}, 'ui') }}</label>
                        <input type="email" id="email" name="email" class="form-control"
                               value="{{ formData.email|default('') }}" required>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">{{ 'user.password_label'|trans({}, 'ui') }}</label>
                        <input type="password" id="password" name="password" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="role" class="form-label">{{ 'user.role'|trans({}, 'ui') }}</label>
                        <select id="role" name="role" class="form-select" required>
                            <option value="">{{ 'user.select_role'|trans({}, 'ui') }}</option>
                            {% for role in roles %}
                                <option value="{{ role.value }}" {{ formData.role|default('') == role.value ? 'selected' : '' }}>
                                    {{ role.value }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('admin_user_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>{{ 'user.cancel'|trans({}, 'ui') }}
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-person-plus me-1"></i>{{ 'user.create_submit'|trans({}, 'ui') }}
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
