{% extends 'my-cards/layout.html.twig' %}

{% block content %}
<div class="bg-white rounded-2xl shadow-[0_22px_55px_-35px_rgba(30,37,44,0.4)] border border-[#e4e1da] p-6 text-center">
    <div class="inline-flex items-center justify-center w-16 h-16 bg-red-100 rounded-full mb-4">
        <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
    </div>
    <h2 class="text-2xl [font-family:'Fraunces',serif] font-semibold text-slate-900 mb-2">{{ 'my_cards.error_heading'|trans({}, 'ui') }}</h2>
    <p class="text-slate-500 mb-6">{{ error_message|trans({}, 'ui') }}</p>
    <a href="{{ path('my_cards_form') }}" class="inline-block bg-gradient-to-r from-emerald-700 to-emerald-600 text-white py-2.5 px-6 rounded-xl font-semibold hover:-translate-y-0.5 transition">
        {{ 'my_cards.back_to_form'|trans({}, 'ui') }}
    </a>
</div>
{% endblock %}
