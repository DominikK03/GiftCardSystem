{% extends 'my-cards/layout.html.twig' %}

{% block content %}
<div class="mb-4">
    <h2 class="text-2xl [font-family:'Fraunces',serif] font-semibold text-slate-900">{{ 'my_cards.cards_heading'|trans({}, 'ui') }}</h2>
    <p class="text-sm text-slate-500 mt-0.5">{{ email }}</p>
</div>

{% if cards is empty %}
    <div class="bg-white rounded-2xl shadow-[0_22px_55px_-35px_rgba(30,37,44,0.4)] border border-[#e4e1da] p-8 text-center">
        <p class="text-slate-500">{{ 'my_cards.no_cards'|trans({}, 'ui') }}</p>
    </div>
{% else %}
    <div class="space-y-3">
        {% for card in cards %}
            {% set statusColors = {
                'inactive': 'bg-gray-100 text-gray-600',
                'active':   'bg-green-100 text-green-700',
                'expired':  'bg-yellow-100 text-yellow-700',
                'depleted': 'bg-red-100 text-red-700',
                'cancelled':'bg-red-100 text-red-700',
                'suspended':'bg-orange-100 text-orange-700'
            } %}
            <div class="bg-white rounded-2xl shadow-[0_22px_55px_-35px_rgba(30,37,44,0.4)] border border-[#e4e1da] p-5">
                {% if tenant_names[card.tenantId] is defined and tenant_names[card.tenantId] is not null %}
                    <div class="flex items-center gap-2 mb-3">
                        <svg class="w-4 h-4 text-slate-400 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                        </svg>
                        <span class="text-xs font-semibold text-slate-500 uppercase tracking-wide">{{ tenant_names[card.tenantId] }}</span>
                    </div>
                {% endif %}
                <div class="flex items-start justify-between gap-4">
                    <div class="flex-1 min-w-0">
                        <div class="flex items-center gap-3 mb-2">
                            <span class="font-mono text-sm font-medium text-slate-900 tracking-wider">
                                {{ card.cardNumber[:4] }}-{{ card.cardNumber[4:4] }}-{{ card.cardNumber[8:] }}
                            </span>
                            <span class="px-2 py-0.5 rounded-full text-xs font-medium {{ statusColors[card.status|lower]|default('bg-gray-100 text-gray-600') }}">
                                {{ ('status.' ~ card.status|lower)|trans({}, 'ui') }}
                            </span>
                        </div>
                        <div class="flex gap-6 text-sm text-slate-600">
                            <span>
                                <span class="text-slate-400">{{ 'my_cards.balance'|trans({}, 'ui') }}:</span>
                                <span class="font-semibold text-emerald-800">{{ (card.balanceAmount / 100)|number_format(2, ',', ' ') }} {{ card.balanceCurrency }}</span>
                            </span>
                            {% if card.expiresAt %}
                            <span>
                                <span class="text-slate-400">{{ 'my_cards.expires_at'|trans({}, 'ui') }}:</span>
                                <span>{{ card.expiresAt|date('d.m.Y') }}</span>
                            </span>
                            {% endif %}
                        </div>
                    </div>
                    <a href="{{ path('my_cards_detail', {id: request_id, cardId: card.id}) }}"
                       class="shrink-0 bg-gradient-to-r from-emerald-700 to-emerald-600 text-white px-4 py-2 rounded-xl text-sm font-semibold hover:-translate-y-0.5 transition">
                        {{ 'my_cards.details_button'|trans({}, 'ui') }}
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% endblock %}
