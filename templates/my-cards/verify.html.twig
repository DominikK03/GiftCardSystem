{% extends 'my-cards/layout.html.twig' %}

{% block content %}
<div class="bg-white rounded-2xl shadow-[0_22px_55px_-35px_rgba(30,37,44,0.4)] border border-[#e4e1da] p-6">
    <div class="text-center mb-6">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-emerald-100 rounded-full mb-4">
            <svg class="w-8 h-8 text-emerald-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
        </div>
        <h2 class="text-2xl [font-family:'Fraunces',serif] font-semibold text-slate-900">{{ 'my_cards.verify_heading'|trans({}, 'ui') }}</h2>
        <p class="text-sm text-slate-500 mt-1">{{ 'my_cards.verify_description'|trans({}, 'ui') }}</p>
        <p class="text-sm font-semibold text-emerald-800 mt-1">{{ email }}</p>
    </div>

    <form method="POST" action="{{ path('my_cards_verify_submit', {id: request_id}) }}" class="space-y-4">
        <div>
            <label for="code" class="block text-sm font-medium text-slate-700 mb-1">{{ 'my_cards.code_label'|trans({}, 'ui') }}</label>
            <input type="text" id="code" name="code" required maxlength="6" pattern="[0-9]{6}"
                   class="w-full px-3 py-3 border border-[#d9d3c8] rounded-xl text-center text-2xl font-mono tracking-[0.5em] focus:ring-2 focus:ring-emerald-600/30 focus:border-emerald-700 outline-none"
                   placeholder="{{ 'my_cards.code_placeholder'|trans({}, 'ui') }}"
                   autocomplete="one-time-code" inputmode="numeric">
        </div>

        <p class="text-xs text-slate-400 text-center">{{ 'my_cards.code_expires'|trans({}, 'ui') }}</p>

        <button type="submit" class="w-full bg-gradient-to-r from-emerald-700 to-emerald-600 text-white py-2.5 px-4 rounded-xl font-semibold hover:-translate-y-0.5 focus:ring-2 focus:ring-emerald-600/35 focus:ring-offset-2 transition">
            {{ 'my_cards.verify_submit'|trans({}, 'ui') }}
        </button>
    </form>
</div>
{% endblock %}
