{% extends 'my-cards/layout.html.twig' %}

{% block content %}
{% set statusColors = {
    'inactive': 'bg-gray-100 text-gray-600',
    'active':   'bg-green-100 text-green-700',
    'expired':  'bg-yellow-100 text-yellow-700',
    'depleted': 'bg-red-100 text-red-700',
    'cancelled':'bg-red-100 text-red-700',
    'suspended':'bg-orange-100 text-orange-700'
} %}

<div class="mb-4">
    <a href="{{ path('my_cards_list', {id: request_id}) }}" class="text-sm text-emerald-700 hover:underline flex items-center gap-1 font-medium">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        {{ 'my_cards.back_to_list'|trans({}, 'ui') }}
    </a>
</div>

{# Card info #}
<div class="bg-white rounded-2xl shadow-[0_22px_55px_-35px_rgba(30,37,44,0.4)] border border-[#e4e1da] p-6 mb-4">
    <div class="flex items-center justify-between mb-4">
        <h2 class="text-2xl [font-family:'Fraunces',serif] font-semibold text-slate-900">{{ 'my_cards.detail_heading'|trans({}, 'ui') }}</h2>
        <span class="px-3 py-1 rounded-full text-sm font-medium {{ statusColors[card.status|lower]|default('bg-gray-100 text-gray-600') }}">
            {{ ('status.' ~ card.status|lower)|trans({}, 'ui') }}
        </span>
    </div>

    <div class="space-y-0">
        {% if tenant_name %}
        <div class="flex justify-between items-center py-2.5 border-b border-[#eee8df]">
            <span class="text-sm text-slate-500">{{ 'my_cards.issuer'|trans({}, 'ui') }}</span>
            <span class="flex items-center gap-1.5 text-sm font-semibold text-slate-700">
                <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
                {{ tenant_name }}
            </span>
        </div>
        {% endif %}
        <div class="flex justify-between items-center py-2.5 border-b border-[#eee8df]">
            <span class="text-sm text-slate-500">{{ 'my_cards.card_number'|trans({}, 'ui') }}</span>
            <span class="font-mono font-medium text-slate-900 tracking-wider">{{ card.cardNumber[:4] }}-{{ card.cardNumber[4:4] }}-{{ card.cardNumber[8:] }}</span>
        </div>
        <div class="flex justify-between items-center py-2.5 border-b border-[#eee8df]">
            <span class="text-sm text-slate-500">{{ 'my_cards.balance'|trans({}, 'ui') }}</span>
            <span class="text-lg font-semibold text-emerald-800">{{ (card.balanceAmount / 100)|number_format(2, ',', ' ') }} {{ card.balanceCurrency }}</span>
        </div>
        {% if card.expiresAt %}
        <div class="flex justify-between items-center py-2.5 border-b border-[#eee8df]">
            <span class="text-sm text-slate-500">{{ 'my_cards.expires_at'|trans({}, 'ui') }}</span>
            <span class="text-sm text-slate-800">{{ card.expiresAt|date('d.m.Y') }}</span>
        </div>
        {% endif %}
        {% if card.activatedAt %}
        <div class="flex justify-between items-center py-2.5 border-b border-[#eee8df]">
            <span class="text-sm text-slate-500">{{ 'giftcard.activated_at'|trans({}, 'ui') }}</span>
            <span class="text-sm text-slate-800">{{ card.activatedAt|date('d.m.Y H:i') }}</span>
        </div>
        {% endif %}
    </div>
</div>

{# Event history timeline #}
{% if history and history.history|length > 0 %}
<div class="bg-white rounded-2xl shadow-[0_22px_55px_-35px_rgba(30,37,44,0.4)] border border-[#e4e1da] p-6">
    <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg [font-family:'Fraunces',serif] font-semibold text-slate-900">{{ 'my_cards.event_history'|trans({}, 'ui') }}</h3>
        <span class="text-sm text-slate-400">{{ history.history|length }} {{ 'my_cards.events'|trans({}, 'ui') }}</span>
    </div>
    <div class="space-y-3">
        {% set eventLabels = {
            'GiftCardCreated': 'Karta utworzona',
            'GiftCardActivated': 'Karta aktywowana',
            'GiftCardRedeemed': 'Zrealizowano',
            'GiftCardDepleted': 'Saldo wyczerpane',
            'GiftCardSuspended': 'Karta zawieszona',
            'GiftCardReactivated': 'Karta reaktywowana',
            'GiftCardCancelled': 'Karta anulowana',
            'GiftCardExpired': 'Karta wygas≈Ça',
            'GiftCardBalanceAdjusted': 'Korekta salda',
            'GiftCardBalanceDecreased': 'Zmniejszenie salda'
        } %}
        {% set eventDotColors = {
            'GiftCardCreated': 'bg-blue-500',
            'GiftCardActivated': 'bg-green-500',
            'GiftCardRedeemed': 'bg-cyan-500',
            'GiftCardDepleted': 'bg-red-500',
            'GiftCardSuspended': 'bg-orange-500',
            'GiftCardReactivated': 'bg-green-500',
            'GiftCardCancelled': 'bg-red-500',
            'GiftCardExpired': 'bg-yellow-500',
            'GiftCardBalanceAdjusted': 'bg-purple-500',
            'GiftCardBalanceDecreased': 'bg-red-500'
        } %}

        {% for item in history.history|reverse %}
            <div class="flex items-start gap-3">
                <div class="mt-1 w-3 h-3 rounded-full shrink-0 {{ eventDotColors[item.eventType]|default('bg-gray-400') }}"></div>
                <div class="flex-1 min-w-0">
                    <div class="flex items-baseline justify-between gap-2">
                        <span class="text-sm font-medium text-slate-800">{{ eventLabels[item.eventType]|default(item.eventType) }}</span>
                        <span class="text-xs text-slate-400 shrink-0">{{ item.occurredAt|slice(0, 10) }} {{ item.occurredAt|slice(11, 5) }}</span>
                    </div>
                    <div class="text-sm text-slate-500">
                        {{ (item.balanceAmount / 100)|number_format(2, ',', ' ') }} {{ item.balanceCurrency }}
                    </div>
                </div>
            </div>
            {% if not loop.last %}
                <div class="ml-1.5 w-px h-4 bg-[#e7e1d7]"></div>
            {% endif %}
        {% endfor %}
    </div>
</div>
{% endif %}
{% endblock %}
