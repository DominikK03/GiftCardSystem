{% extends 'activation/layout.html.twig' %}

{% block content %}
<div class="bg-white rounded-2xl shadow-[0_22px_55px_-35px_rgba(30,37,44,0.4)] border border-[#e4e1da] p-6">
    <div class="text-center mb-6">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-emerald-100 rounded-full mb-4">
            <svg class="w-8 h-8 text-emerald-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
            </svg>
        </div>
        <h2 class="text-2xl [font-family:'Fraunces',serif] font-semibold text-slate-900">{{ 'activation.form_heading'|trans({}, 'ui') }}</h2>
        <p class="text-sm text-slate-500 mt-1">{{ 'activation.form_description'|trans({}, 'ui') }}</p>
    </div>

    <form method="POST" action="{{ path('activation_submit') }}" class="space-y-4">
        <input type="hidden" name="return_url" value="{{ return_url }}">
        <input type="hidden" name="callback_url" value="{{ callback_url }}">

        <div>
            <label for="email" class="block text-sm font-medium text-slate-700 mb-1">{{ 'activation.email_label'|trans({}, 'ui') }}</label>
            <input type="email" id="email" name="email" required
                   class="w-full px-3 py-2.5 border border-[#d9d3c8] rounded-xl focus:ring-2 focus:ring-emerald-600/30 focus:border-emerald-700 outline-none"
                   placeholder="{{ 'activation.email_placeholder'|trans({}, 'ui') }}"
                   value="{{ submitted_email|default('') }}">
        </div>

        <div>
            <label for="card_number" class="block text-sm font-medium text-slate-700 mb-1">{{ 'activation.card_number_label'|trans({}, 'ui') }}</label>
            <input type="text" id="card_number" name="card_number" required maxlength="12"
                   class="w-full px-3 py-2.5 border border-[#d9d3c8] rounded-xl focus:ring-2 focus:ring-emerald-600/30 focus:border-emerald-700 outline-none uppercase tracking-widest font-mono"
                   placeholder="{{ 'activation.card_number_placeholder'|trans({}, 'ui') }}"
                   value="{{ submitted_card_number|default('') }}">
        </div>

        <div>
            <label for="pin" class="block text-sm font-medium text-slate-700 mb-1">{{ 'activation.pin_label'|trans({}, 'ui') }}</label>
            <input type="password" id="pin" name="pin" required maxlength="8"
                   class="w-full px-3 py-2.5 border border-[#d9d3c8] rounded-xl focus:ring-2 focus:ring-emerald-600/30 focus:border-emerald-700 outline-none font-mono tracking-widest"
                   placeholder="{{ 'activation.pin_placeholder'|trans({}, 'ui') }}">
        </div>

        <button type="submit" class="w-full bg-gradient-to-r from-emerald-700 to-emerald-600 text-white py-2.5 px-4 rounded-xl font-semibold hover:-translate-y-0.5 focus:ring-2 focus:ring-emerald-600/35 focus:ring-offset-2 transition">
            {{ 'activation.submit'|trans({}, 'ui') }}
        </button>
    </form>
</div>
{% endblock %}
