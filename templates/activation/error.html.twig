{% extends 'activation/layout.html.twig' %}

{% block content %}
<div class="bg-white rounded-2xl shadow-[0_22px_55px_-35px_rgba(30,37,44,0.4)] border border-[#e4e1da] p-6">
    <div class="text-center mb-6">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-red-100 rounded-full mb-4">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"/>
            </svg>
        </div>
        <h2 class="text-2xl [font-family:'Fraunces',serif] font-semibold text-slate-900">{{ 'activation.error_heading'|trans({}, 'ui') }}</h2>
        <p class="text-sm text-red-600 mt-2">{{ error_message|trans({}, 'ui') }}</p>
    </div>

    {% if return_url is defined and return_url %}
        <a href="{{ return_url }}" class="block w-full text-center bg-slate-100 text-slate-700 py-2.5 px-4 rounded-xl font-semibold hover:bg-slate-200 transition">
            {{ 'activation.back_to_form'|trans({}, 'ui') }}
        </a>
    {% else %}
        <a href="{{ path('activation_form') }}" class="block w-full text-center bg-slate-100 text-slate-700 py-2.5 px-4 rounded-xl font-semibold hover:bg-slate-200 transition">
            {{ 'activation.back_to_form'|trans({}, 'ui') }}
        </a>
    {% endif %}
</div>
{% endblock %}
